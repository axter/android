<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.imohoo.libs.camera.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.imohoo.libs.camera.CameraFocusImageView
        android:id="@+id/focusImageView"
        android:layout_width="75dip"
        android:layout_height="75dip"
        camera:focus_fail_id="@drawable/camera_focus_failed"
        camera:focus_focusing_id="@drawable/camera_focusing"
        camera:focus_success_id="@drawable/camera_focused" />

</RelativeLayout>